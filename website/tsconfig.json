{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": [
    "src",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
}